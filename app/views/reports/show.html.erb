<div class="max-w-lg mx-auto mt-16 max-w-sm rounded overflow-hidden shadow-lg p-10 bg-white ">
  <%= render "shared/flash" %>
  <h1 class="mb-4 text-3xl font-black text-center">Weather Report</h1>

  <%= form_with(method: 'get', local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-md mx-auto text-center") do %>
    <%= label :address,  "Enter your address",  class: "block text-sm font-medium text-gray-700" %><br>
    <%= text_field_tag(:address, @address || @address_default, class: "mt-1 p-2 block w-full rounded-md border outline-none border-gray-300 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500" ) %><br>
    <%= submit_tag("Lookup",  class: "w-full py-3 px-4 text-white font-semibold bg-indigo-500 rounded-md focus:outline-none focus:bg-indigo-600 hover:bg-indigo-600") %>
  <% end %>

    <% if defined?(@data) %>
    <table class="table-fixed border-separate -sm:hidden empty-cells-hidden mx-auto">
      <tbody>
	<tr>
	  <td colspan=2 class="text-center"><b><%= @data.name %></b></td>
	</tr>
	<tr>
	  <td>Temperature</td>
	  <td><%= @data.main.temp_f %> °F</td>
	</tr>
	<tr>
	  <td>Minimum Temperature</td>
	  <td><%= @data.main.temp_min_f %> °F</td>
	</tr>
	<tr>
	  <td>Maximum Temperature</td>
	  <td><%= @data.main.temp_max_f %> °F</td>
	</tr>
	<tr>
	  <td>Humidity</td>
	  <td><%= @data.main.humidity %>%</td>
	</tr>
	<tr>
	  <td>Wind</td>
	  <td><%= @data.wind.speed_mph %> mph</td>
	</tr>
	<tr>
	  <td>Pressure</td>
	  <td><%= @data.main.pressure %> mb</td>
	</tr>
	<tr>
	  <td>Description</td>
	  <td><%= @data.weather.first.description %></td>
	</tr>
      </tbody>
    </table>
    <% end %>

</div>
